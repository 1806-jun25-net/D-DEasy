@model DandDEasy_WEB.Models.Login

@{
    ViewData["Title"] = "Login";
}

<style>
    .Background {
        background-image: url(https://images3.alphacoders.com/152/152779.jpg);
        background-repeat: no-repeat;
        background-size: cover;
    }

    .dicbacl {
        background-image: url(http://www.dalimaden.com/Resim/Fotogaleri/Buyuk/fotogaleri12198b4e.jpg);
        background-repeat: no-repeat;
        background-size: cover;
        border-style: groove;
        margin-top: 5%;
    }

    p {
        font-size: 17px;
    }
</style>


<body class="Background">
    <div class="dicbacl" style="margin: 6% 30% 20% 30%">

        <h1 align="center">Login</h1>
        <hr />
        <div class="row" style="margin-right: -138%; margin-left: 12%" >
            <div class="col-md-4">
                <form asp-action="Login">
                    <div class="form-group">
                        <label asp-for="Username" class="control-label"></label>
                        <input asp-for="Username" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Log In" class="btn btn-default" />
                    </div>
                </form>
            </div>
        </div>


    </div>
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
