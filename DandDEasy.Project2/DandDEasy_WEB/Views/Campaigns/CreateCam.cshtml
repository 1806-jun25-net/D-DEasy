@model DandDEasy_WEB.Models.Campaign

@{
    ViewData["Title"] = "CreateCam";
}

<style>
    .Background {
        background-image: url(https://images3.alphacoders.com/152/152779.jpg);
        background-repeat: no-repeat;
        background-size: cover;
    }

    .dicbacl {
        background-image: url(http://www.dalimaden.com/Resim/Fotogaleri/Buyuk/fotogaleri12198b4e.jpg);
        background-repeat: no-repeat;
        background-size: cover;
        border-style: groove;
        margin-top: 5%;
    }

    p {
        font-size: 17px;
    }
</style>

<body class="Background">
    <div class="dicbacl" style="margin: 6% 30% 20% 30%">


        <h2>CreateCam</h2>

        <h4>Campaign</h4>
        <hr />
        <div class="row" style="margin-right: -138%; margin-left: 12%">
            <div class="col-md-4">
                <form asp-action="CreateCam">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </form>
            </div>
        </div>

    </div>
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
